<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_container"
    app:startDestination="@id/setupFragment">
    <fragment
        android:id="@+id/runFragment"
        android:name="com.saddam.trackingapp.views.fragment.run.RunFragment"
        android:label="fragment_tracking"
        tools:layout="@layout/fragment_tracking" >
        <action
            android:id="@+id/action_runFragment_to_trackingFragment"
            app:destination="@id/trackingFragment" />
    </fragment>
    <fragment
        android:id="@+id/statisticFragment"
        android:name="com.saddam.trackingapp.views.fragment.statistics.StatisticFragment"
        tools:layout="@layout/fragment_statistic"
        android:label="StatisticFragment" />


    <fragment
        android:id="@+id/trackingFragment"
        android:name="com.saddam.trackingapp.views.fragment.tracking.TrackingFragment"
        android:label="trackingFragment"
        tools:layout="@layout/fragment_tracking">
        <action
            android:id="@+id/action_trackingFragment_to_runFragment"
            app:destination="@id/runFragment" />
    </fragment>

    <fragment
        android:id="@+id/setupFragment"
        tools:layout="@layout/fragment_setup"
        android:label="setupFragment"
        android:name="com.saddam.trackingapp.views.fragment.setup.SetupFragment">
        <action
            android:id="@+id/action_setupFragment_to_runFragment"
            app:destination="@id/runFragment" />
    </fragment>

    <fragment
        android:name="com.saddam.trackingapp.views.fragment.settings.SettingFragment"
        tools:layout="@layout/fragment_setting"
        android:label="settingFragment"
        android:id="@+id/settingFragment"
        />

</navigation>